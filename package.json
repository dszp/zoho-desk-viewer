{
  "name": "zohodesk-tickets",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "seed": "tsx packages/server/src/db/seed.ts",
    "dev:server": "tsx watch packages/server/src/index.ts",
    "dev:client": "npm run dev -w packages/client",
    "dev": "concurrently -n server,client -c blue,green \"npm run dev:server\" \"npm run dev:client\"",
    "build": "npm run build -ws"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
